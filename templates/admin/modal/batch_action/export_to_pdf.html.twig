<div id="modal-batch-action-pdf" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <h4 id="batch-action-confirmation-title-pdf">{{ 'batch_action_modal.title'|trans(domain = 'EasyAdminBundle') }}</h4>
                <div class="">
                    <label for="bibliography">
                        <input id="bibliography" type="checkbox" name="additional_data" value="true" />
                        <span>Bibliographie</span>
                    </label>
                    <label for="exhibition">
                        <input id="exhibition" type="checkbox" name="additional_data" value="true" />
                        <span>Exposition</span>
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-bs-dismiss="modal" class="btn btn-secondary">
                    <span class="btn-label">{{ 'action.cancel'|trans(domain = 'EasyAdminBundle') }}</span>
                </button>
                <button type="button" data-bs-dismiss="modal" class="btn btn-danger" id="modal-batch-action-button-pdf">
                    <i class="fa fa-fw fa-check"></i>
                    <span class="btn-label">{{ 'batch_action_modal.action'|trans(domain = 'EasyAdminBundle') }}</span>
                </button>
            </div>
        </div>
    </div>
</div>
