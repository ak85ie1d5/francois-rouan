{% extends 'base.html.twig' %}

{% block title %}Hello OeuvreController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">


        <p>Numéro d'inventaire : {{ oeuvre.numInventaire }}</p>
        https://devmaster.local:5443{{ vich_uploader_asset(oeuvre.primaryMedia[0]) }}
        <img src="{{ base64Image }}" alt="" class="img-fluid" width="200" height="200">

        <p>Titre : {{ oeuvre.titre }}</p>
        <p>Date de création : {% if oeuvre.FirstDay %}{{ oeuvre.FirstDay }}/{% endif %}{% if oeuvre.FirstMonth %}{{ oeuvre.FirstMonth }}/{% endif %}{{ oeuvre.FirstYear }}</p>
        <p>Dimentions : {{ oeuvre.dimensions }}</p>
        <p>Description : {{ oeuvre.description }}</p>
        <p>Commentaire public : {{ oeuvre.commentairePublic }}</p>
    </div>
{% endblock %}
